{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./src/main.js"],
  "compilerOptions": {
    "types": [
      "@dcloudio/types",
      "miniprogram-api-typings",
      "mini-types"
    ],
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "strict": true,
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "abv"
  },
  "vueCompilerOptions": {
    "target": 3
  }
}
